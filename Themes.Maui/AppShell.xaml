<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Themes.Maui.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Themes.Maui"
       xmlns:pages="clr-namespace:Themes.Maui.Pages"
       Shell.FlyoutBehavior="Flyout"
       Title="Themes.Maui">


    <FlyoutItem Title="Home"
                Route="home">
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate pages:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Controls Demo"
                Route="controls">
        <ShellContent Title="Controls Demo"
                      ContentTemplate="{DataTemplate pages:ControlsDemoPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings"
                Route="settings">
        <ShellContent Title="Settings"
                      ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </FlyoutItem>


</Shell>
