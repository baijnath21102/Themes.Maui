<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Themes.Maui.Pages.ControlsDemoPage"
             xmlns:vm="clr-namespace:Themes.Maui.ViewModels"
             x:DataType="vm:ControlsDemoViewModel"
             Title="Controls Demo">
    <ScrollView>
        <VerticalStackLayout Padding="16"
                             Spacing="16">

            <Label Text="Text &amp; Buttons"
                   FontAttributes="Bold" />
            <Entry Placeholder="Enter your name"
                   Text="{Binding Name}" />
            <Button Text="Say Hello"
                    Command="{Binding SayHelloCommand}" />
            <Label Text="{Binding HelloText}" />

            <BoxView HeightRequest="1"
                     BackgroundColor="#44444422" />

            <Label Text="Selection &amp; Lists"
                   FontAttributes="Bold" />
            <Picker Title="Choose a city"
                    ItemsSource="{Binding Cities}"
                    SelectedItem="{Binding SelectedCity}" />
            <Button Text="Show Selected City"
                    Command="{Binding ShowCityCommand}" />

            <BoxView HeightRequest="1"
                     BackgroundColor="#44444422" />

            <Label Text="Sliders &amp; Steppers"
                   FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="12">
                <Label Text="Volume:"
                       VerticalOptions="Center" />
                <Slider Minimum="0"
                        Maximum="100"
                        Value="{Binding Volume}"
                        WidthRequest="200" />
                <Label Text="{Binding Volume, StringFormat='{}{0:F0}%'}"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="12">
                <Label Text="Quantity:"
                       VerticalOptions="Center" />
                <Stepper Minimum="0"
                         Maximum="10"
                         Increment="1"
                         Value="{Binding Quantity}" />
                <Label Text="{Binding Quantity}"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <BoxView HeightRequest="1"
                     BackgroundColor="#44444422" />

            <Label Text="Toggles &amp; Dates"
                   FontAttributes="Bold" />
            <Switch IsToggled="{Binding NotificationsEnabled}" />
            <Label Text="{Binding NotificationsEnabled, StringFormat='Notifications: {0}'}" />
            <DatePicker Date="{Binding SelectedDate}" />
            <TimePicker Time="{Binding SelectedTime}" />

            <BoxView HeightRequest="1"
                     BackgroundColor="#44444422" />

            <Label Text="Progress &amp; Activity"
                   FontAttributes="Bold" />
            <ActivityIndicator IsRunning="{Binding IsBusy}" />
            <ProgressBar Progress="{Binding Progress}" />
            <Button Text="Simulate Work"
                    Command="{Binding SimulateWorkCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>